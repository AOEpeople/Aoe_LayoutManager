<?xml version="1.0"?>
<layout>
    <adminhtml_layout_grid>
		 <block type="core/text_list" name="root" output="toHtml">
            <block type="aoe_layout/adminhtml_layout_grid" name="aoe_layout.grid"/>
        </block>
    </adminhtml_layout_grid>
    <adminhtml_layout_index>
        <reference name="content">
            <block type="aoe_layout/adminhtml_layout" name="aoe_layout" />
        </reference>
    </adminhtml_layout_index>
    <adminhtml_layout_edit>
        <reference name="left">
            <block type="aoe_layout/adminhtml_layout_edit_tabs" name="aoe_layout_edit_tabs">
                <block type="aoe_layout/adminhtml_layout_edit_tab_form" name="aoe_layout_edit_tab_form"/>
                <action method="addTab"><name>information_section</name><block>aoe_layout_edit_tab_form</block></action>
            </block>
        </reference>
        <reference name="content">
            <block type="aoe_layout/adminhtml_layout_edit" name="aoe_layout_edit_information"/>
        </reference>
    </adminhtml_layout_edit>
</layout>
